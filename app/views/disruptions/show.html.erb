<h1>Listing disruptions</h1>

<table>
  <thead>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>

  <div style='width: 1200px;'>
    <div id="multi_markers" style='width: 1200px; height: 800px;'></div>
  </div>


  <script>
    <%= binding.pry %>
     var lat = "<%=  @cordinats[:lat].html_safe  %>";
     var lng = "<%= @cordinats[:lng].html_safe %>";
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: {id: 'multi_markers'}}, function(){
          var markers = handler.addMarkers([
              { lat: lat.substring(2), lng: lng.substring(2)}
          ]);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
      });

  </script>
  </tbody>
</table>

